pipeline {
    agent any

    stages {

        stage('Set Maven Path & Build') {
            steps {
                bat '''
                set MAVEN_HOME=C:\\Program Files\\Apache\\Maven\\apache-maven-3.9.6
                set PATH=%MAVEN_HOME%\\bin;%PATH%

                echo Maven Home: %MAVEN_HOME%
                mvn -version

                mvn clean compile
                mvn test
                '''
            }
        }
    }
}
